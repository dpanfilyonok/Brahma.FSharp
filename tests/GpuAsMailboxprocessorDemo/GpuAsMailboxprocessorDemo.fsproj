<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <AssemblyName>GpuAsMBP</AssemblyName>
    <TargetFrameworks>net461;netstandard2.1</TargetFrameworks>
    <OutputType>Exe</OutputType>
  </PropertyGroup>
  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup>
    <Title>GpuAsMBP</Title>
    <Description>Brahma.FSharp does the thing!</Description>

  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <Optimize>true</Optimize>
    <Tailcalls>true</Tailcalls>

  </PropertyGroup>
  <ItemGroup>
        <Compile Include="AssemblyInfo.fs" />
        <Compile Include="PrefixSum.fs" />
        <Compile Include="PreparePositions.fs" />
        <Compile Include="SetPositions.fs" />
        <Compile Include="Merge.fs" />
        <Compile Include="EWiseAdd.fs" />
        <Compile Include="App.fs" />
        <Compile Include="Program.fs" />
        <Content Include="app.config" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Brahma.FSharp.OpenCL.Core\Brahma.FSharp.OpenCL.Core.fsproj" />
  </ItemGroup>
  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>
